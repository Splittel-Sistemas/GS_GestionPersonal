@model IEnumerable<GPSInformation.Responses.PuestosResp>

@{
    ViewData["Title"] = "Lista de puestos";
}

@section MenuTop{
    <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                    <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                </ol>
            </nav>
            <h4 class="mg-b-0 tx-spacing--1">@ViewData["Title"]</h4>
        </div>
        <div class="d-none d-md-block">
            <a asp-action="Create" class="btn btn-sm pd-x-15 btn-white btn-uppercaser"><i data-feather="plus" class="wd-10 mg-r-5"></i>Crear nuevo</a>
        </div>
    </div>
}
<table class="table" id="lista_puestos">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Puesto.DPU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puesto.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puesto.SalarioMin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puesto.SalarioMax)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Puesto.DPU)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Puesto.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Puesto.SalarioMin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Puesto.SalarioMax)
                </td>
                <td>
                    @if ((bool)ViewBag.Access17)
                    {
                        @Html.ActionLink("Editar", "Edit", new { id = item.Puesto.IdPuesto }) <span>|</span>
                    }
                    @Html.ActionLink("Detalle", "Details", new { id = item.Puesto.IdPuesto })
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            'use strict'

            $('#lista_puestos').DataTable({
                language: {
                    searchPlaceholder: 'Search...',
                    sSearch: '',
                    lengthMenu: '_MENU_ items/page',
                },
                ordering: false
            });

        });
    </script>
}
