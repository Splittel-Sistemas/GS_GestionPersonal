@model GPSInformation.Models.PersonaContacto

<div>
    <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
        <div>
            <h4 class="mg-b-0 tx-spacing--1">Información Contacto de emergencia</h4>
        </div>
        <div class="d-none d-md-block">
            <a href="#" class="btn btn-sm pd-x-15 btn-white btn-uppercaser" data-rute="@Url.Action("EmpContEmergenciaDetails","ColaboradorSplittel", new  { id = Model.IdPersonaContacto })" onclick="GetViewAccess(this)">
                <i data-feather="refresh" class="wd-10 mg-r-5"></i>Refrescar
            </a>
            <a href="#" class="btn btn-sm pd-x-15 btn-white btn-uppercaser" data-rute="@Url.Action("EmpContEmergenciaEdit","ColaboradorSplittel", new  { id = Model.IdPersonaContacto })" data-mode="form" onclick="GetViewAccess(this)"><i data-feather="refresh" class="wd-10 mg-r-5"></i>Editar</a>
        </div>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-lg-2 col-form-label">
            @Html.DisplayNameFor(model => model.NombreCompleto)
        </dt>
        <dd class="col-lg-4 col-form-label bg-light mb-1">
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>
        <dt class="col-lg-2 col-form-label">
            @Html.DisplayNameFor(model => model.IdParentezco)
        </dt>
        <dd class="col-lg-4 col-form-label bg-light mb-1">
            @Html.DisplayFor(model => model.Cat_Parentezcos.Label)
        </dd>
        <dt class="col-lg-2 col-form-label">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class="col-lg-4 col-form-label bg-light mb-1">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class="col-lg-2 col-form-label">
            @Html.DisplayNameFor(model => model.CodigoPostal)
        </dt>
        <dd class="col-lg-4 col-form-label bg-light mb-1">
            @Html.DisplayFor(model => model.CodigoPostal)
        </dd>
        <dt class="col-lg-2 col-form-label">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class="col-lg-4 col-form-label bg-light mb-1">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class="col-lg-2 col-form-label">
            @Html.DisplayNameFor(model => model.Creado)
        </dt>
        <dd class="col-lg-4 col-form-label bg-light mb-1">
            @Html.DisplayFor(model => model.Creado)
        </dd>
        <dt class="col-lg-2 col-form-label">
            @Html.DisplayNameFor(model => model.Editado)
        </dt>
        <dd class="col-lg-4 col-form-label bg-light mb-1">
            @Html.DisplayFor(model => model.Editado)
        </dd>
    </dl>
</div>
<div>
    <a href="#" class="btn btn-sm pd-x-15 btn-white btn-uppercaser" data-rute="@Url.Action("EmpContEmergenciaList","ColaboradorSplittel", new  { id = Model.IdPersona })" onclick="GetViewAccess(this)">Lista de contactos de emergencia</a>
</div>
