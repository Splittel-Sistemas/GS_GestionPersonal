@model GPSInformation.Models.InformacionMedica

<div>
    <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
        <div>
            <h4 class="mg-b-0 tx-spacing--1">Información medica</h4>
        </div>
        <div class="d-none d-md-block">
            <a href="#" class="btn btn-sm pd-x-15 btn-white btn-uppercaser" data-rute="@Url.Action("EmpInfoMedicaEdit","ColaboradorSplittel", new  { id = Model.IdPersona })" data-mode="form" onclick="GetViewAccess(this)">
                <i data-feather="refresh" class="wd-10 mg-r-5"></i>Refrescar
            </a>
        </div>
    </div>
    <hr />
    <label class="col-sm-12 col-form-label bg-light mb-3">@Html.DisplayNameFor(model => model.Editado) : @Html.DisplayFor(model => model.Editado)</label>
    <form asp-action="EmpInfoMedicaEdit" asp-controller="ColaboradorSplittel" enctype="application/x-www-form-urlencoded" class="ExcecForm" name="EmpPersonaEdit" id="EmpPersonaEdit">
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-primary alert-dismissible fade show" role="alert">
                <h4 class="alert-heading">Estimado usuario!</h4>
                <p>@ViewBag.SuccessMessage</p>
                <hr>
                <p class="mb-0">Atte: Sistema gestión de personal</p>
            </div>
        }

        @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
        {
            <div class="alert alert-danger  mg-b-0 mt-3 mb-3" role="alert">
                <button type="button" class="close" data-dismiss="alert">×</button>
                @Html.ValidationSummary(true, "Errores: ")
            </div>
        }
        <div class="row form-group">
            <label asp-for="Alergias" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="hidden" asp-for="IdPersona" class="form-control" />
                <input type="hidden" asp-for="Creado" class="form-control" />
                <input type="hidden" asp-for="Editado" class="form-control" />
                <input type="hidden" asp-for="IdInformacionMedica" class="form-control" />
                <select asp-for="Alergias" asp-items="ViewBag.Alergia" class="form-control select2">
                    <option value="0">Selecciona una opción</option>
                </select>
                <span asp-validation-for="Alergias" class="text-danger"></span>
            </div>
            <label asp-for="TipoSangre" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <select asp-for="TipoSangre" asp-items="ViewBag.TipoSangre" class="form-control select2">
                    <option value="0">Selecciona una opción</option>
                </select>
                <span asp-validation-for="TipoSangre" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <label asp-for="Altura" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="Altura" onchange="CalcularIMC" class="form-control" />
                <span asp-validation-for="Altura" class="text-danger"></span>
            </div>
            <label asp-for="Peso" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="Peso" onchange="CalcularIMC" class="form-control" />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <label asp-for="Talla" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="Talla" class="form-control" />
                <span asp-validation-for="Talla" class="text-danger"></span>
            </div>
            <label asp-for="IMC" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="number" readonly asp-for="IMC" class="form-control" />
                <span asp-validation-for="IMC" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <label asp-for="Comentarios" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Comentarios" class="form-control"></textarea>
                <span asp-validation-for="Comentarios" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mg-b-0">
            <div class="col-sm-12 text-right">
                <button type="reset" class="btn btn-sm btn-secondary" data-rute="@Url.Action("EmpInfoMedicaDetails","ColaboradorSplittel", new  { id = Model.IdPersona })" onclick="GetViewAccess(this)">
                    @Html.Raw(ViewBag.SuccessMessage == null ? "Cancelar" : "Terminar")
                </button>
                <button type="submit" class="btn btn-sm btn-primary">Actualizar información</button>
            </div>
        </div>
    </form>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
