@model GPSInformation.Models.Empleado


<div>
    <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
        <div>
            <h4 class="mg-b-0 tx-spacing--1">Información del empleado</h4>
        </div>
        <div class="d-none d-md-block">
            <a href="#" class="btn btn-sm pd-x-15 btn-white btn-uppercaser" data-rute="@Url.Action("EmpInfoSplittelEdit","ColaboradorSplittel", new  { id = Model.IdPersona })" data-mode="form" onclick="GetViewAccess(this)">
                <i data-feather="refresh" class="wd-10 mg-r-5"></i>Refrescar
            </a>
        </div>
    </div>
    <hr />
    <label class="col-sm-12 col-form-label bg-light mb-3">@Html.DisplayNameFor(model => model.Actualizado) : @Html.DisplayFor(model => model.Actualizado)</label>
    <form asp-action="EmpInfoSplittelEdit" asp-controller="ColaboradorSplittel" enctype="application/x-www-form-urlencoded" class="ExcecForm mt-3" name="EmpPersonaEdit" id="EmpPersonaEdit">
        <div class="alert alert-primary mg-b-0 mb-3" role="alert">
            Si deseas asignar el siguiente número de nomina consecutivo de acuerdo al tipo de nomina seleccionado, por favor introduce <strong>0</strong> el campo <strong>No.Nomina</strong>
        </div>
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-primary alert-dismissible fade show" role="alert">
                <h4 class="alert-heading">Estimado usuario!</h4>
                <p>@ViewBag.SuccessMessage</p>
                <hr>
                <p class="mb-0">Atte: Sistema gestión de personal</p>
            </div>
        }

        @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
        {
            <div class="alert alert-danger  mg-b-0 mt-3 mb-3" role="alert">
                <button type="button" class="close" data-dismiss="alert">×</button>
                @Html.ValidationSummary(true, "Errores: ")
            </div>
        }
        <div class="row form-group">
            <label asp-for="NumeroNomina" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="hidden" asp-for="IdPersona" class="form-control" />
                <input type="hidden" asp-for="IdEmpleado" class="form-control" />
                <input type="number" asp-for="NumeroNomina" class="form-control" />
                <span asp-validation-for="NumeroNomina" class="text-danger"></span>
            </div>
            <label asp-for="TipoNomina" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <select asp-for="TipoNomina" asp-items="ViewBag.TipoNomina" class="form-control select2">
                    <option value="0">Selecciona una opción</option>
                </select>
                <span asp-validation-for="TipoNomina" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <label asp-for="IdSociedad" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <select asp-for="IdSociedad" asp-items="ViewBag.Sociedad" class="form-control select2">
                    <option value="0">Selecciona una opción</option>
                </select>
                <span asp-validation-for="IdSociedad" class="text-danger"></span>
            </div>

        </div>
        <div class="row form-group">
            <label asp-for="IdPuesto" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <select asp-for="IdPuesto" asp-items="ViewBag.Puesto" class="form-control select2">
                    <option value="0">Selecciona una opción</option>
                </select>
                <span asp-validation-for="IdPuesto" class="text-danger"></span>
            </div>
            <label asp-for="Salario" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="number" asp-for="Salario" class="form-control" />
                <span asp-validation-for="Salario" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <label asp-for="TarjetaAcceso" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="number" asp-for="TarjetaAcceso" class="form-control" />
                <span asp-validation-for="TarjetaAcceso" class="text-danger"></span>
            </div>
            <label asp-for="Placas" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="Placas" class="form-control" />
                <span asp-validation-for="Placas" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <label asp-for="Ingreso" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="date" asp-for="Ingreso" class="form-control" />
                <span asp-validation-for="Ingreso" class="text-danger"></span>
            </div>
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="email" asp-for="Email" class="form-control" placeholder="correo@@ejemplo.com;correo2@@ejemplo.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <span class="text-primary">Usa <strong>punto y coma</strong> para separar cada correo</span>
            </div>
        </div>
        <div class="row form-group">
            <label asp-for="Extension" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="number" asp-for="Extension" class="form-control" />
                <span asp-validation-for="Extension" class="text-danger"></span>
            </div>
            <label asp-for="IdEstatus" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <select asp-for="IdEstatus" asp-items="ViewBag.EstatusEmpleado" class="form-control select2">
                    <option value="0">Selecciona una opción</option>
                </select>
                <span asp-validation-for="IdEstatus" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mg-b-0">
            <div class="col-sm-12 text-right">
                <button type="reset" class="btn btn-sm btn-secondary" data-rute="@Url.Action("EmpInfoSplittelDetails","ColaboradorSplittel", new  { id = Model.IdPersona })" onclick="GetViewAccess(this)">
                    @Html.Raw(ViewBag.SuccessMessage == null ? "Cancelar" : "Terminar")
                </button>
                <button type="submit" class="btn btn-sm btn-primary">Actualizar información</button>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
