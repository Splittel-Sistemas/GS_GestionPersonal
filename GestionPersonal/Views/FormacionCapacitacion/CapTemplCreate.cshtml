@model GPSInformation.Models.CapTempl
@{
    ViewData["Title"] = "registrar nueva capacitación";

}
@section Style{
    <style>
        .form-control-sm {
            padding: .25rem .5rem !important;
            font-size: .875rem !important;
            line-height: 1.5 !important;
            border-radius: .2rem !important;
        }

        .img-overlay {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            text-align: center;
            z-index: 2;
        }

            .img-overlay:before {
                content: ' ';
                display: block;
                /* adjust 'height' to position overlay content vertically */
                height: 50%;
            }

        .gray-shade {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
            background: linear-gradient(rgba(255, 255, 255, 0.1), #fff 99%);
        }

        .form-group {
            margin-bottom: 0rem !important;
        }

        .note-editor.note-airframe.fullscreen, .note-editor.note-frame.fullscreen {
            position: fixed;
            top: 0;
            left: 0;
            width: 100% !important;
            z-index: 1050;
            background: white !important;
        }
    </style>

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <link href="~/template/lib/quill/quill.core.css" rel="stylesheet">
    <link href="~/template/lib/quill/quill.snow.css" rel="stylesheet">
    <link href="~/template/lib/quill/quill.bubble.css" rel="stylesheet">


}
@section MenuTop{
    <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                    <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                </ol>
            </nav>
            <h4 class="mg-b-0 tx-spacing--1">@ViewData["Title"]</h4>
        </div>
    </div>
}
<div class="row" id="app_create_remplate">
    <div class="col-3"></div>
    <div class="col-6">
        <form asp-action="CapTemplCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Objetivo" class="control-label"></label>
                <textarea asp-for="Objetivo" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Objetivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CalRepet" class="control-label"></label>
                <input type="number" asp-for="CalRepet" class="form-control" />
                <span asp-validation-for="CalRepet" class="text-danger"></span>
            </div>
            <div class="form-group row mg-b-0 mt-4">
                <div class="col-sm-12 text-right">
                    <button type="reset" class="btn btn-sm btn-secondary">Cancelar</button>
                    <button type="submit" class="btn btn-sm btn-primary" title="guardar información">Registrar</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-3"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script src="~/template/lib/quill/quill.min.js"></script>
    <script>
        var app_create_remplate = new Vue({
            el: "#app_create_remplate",
            data: {},
            mounted() {
                //$('#render_html_template').summernote({ focus: true});
                //$('#render_html_template').summernote({ focus: true});
            }
        });
    </script>
}
