@model GPSInformation.Models.IncidenciaAuthAux

@if (ViewBag.Actual == null)
{
    <div class="alert alert-info col-md-12  alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
        <h4 class="alert-heading">Estimado usuario</h4>
        <p>Este empleado no cuenta con jefe auxiliar para autorización de inciencias, para asignar uno llena el siguiente formulario y da click en <strong>Guadar</strong></p>
        <hr>
        <p class="mb-0">Atte: Sistema Gestión de Personal.</p>
    </div>
}
else
{
    GPSInformation.Models.IncidenciaAuthAux aux = ViewBag.Actual;
<div class="alert alert-warning col-md-12  alert-dismissible fade show" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
    <h4 class="alert-heading">Estimado usuario</h4>
    <p>Se tiene asignado a <strong>@aux.NombreAuth</strong></p>
    <p>Comentarios: @aux.Comentaros</p>
    <br />
    <hr />
    <p>Si deseas eliminar este jefe auxiliar por favor da click <a title="eliminar" onclick="App_editEmpleado.IncAutRemove()" href="#">Aqui</a> </p>



    <hr>
    <p class="mb-0">Atte: Sistema Gestión de Personal.</p>
</div>
}
<div data-label="Informacion" class="df-example demo-forms">
    <form asp-action="IncAutAdd" id="IncAutAdd">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="IdPersonaAuth" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="hidden" asp-for="IdPersona" class="form-control" />
                <select asp-for="IdPersonaAuth" class="form-control select2" asp-items="ViewBag.Empleados">
                    <option value="0">Selecciona una opción</option>
                </select>
                <span asp-validation-for="IdPersonaAuth" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Comentaros" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Comentaros" class="form-control"></textarea>
                <span asp-validation-for="Comentaros" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mg-b-0">
            <div class="col-sm-12 text-right">
                <button type="submit" class="btn btn-sm btn-primary">Guardar</button>
            </div>
        </div>
    </form>
</div>


