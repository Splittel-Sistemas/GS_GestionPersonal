            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                    </ol>
                </nav>
                <h4 class="mg-b-0 tx-spacing--1">@ViewData["Title"]</h4>
            </div>
            <div class="d-none d-md-block">
                @*@if ((bool)ViewBag.ShowEdit && Model.Estatus == 2)
                {
                    <a href="@Url.Action("Edit","IncPermiso", new { id = Model.IdIncidenciaPermiso })" class="btn btn-sm pd-x-15 btn-white btn-uppercaser"><i data-feather="edit" class="wd-10 mg-r-5"></i>Editar</a>
                }*@
                @if ((bool)ViewBag.ShowCancel && Model.Estatus <= 4)
                {
                <a href="@Url.Action("Cancelar","IncPermiso", new { id = Model.IdIncidenciaPermiso })" class="btn btn-sm pd-x-15 btn-white btn-uppercaser"><i data-feather="x" class="wd-10 mg-r-5"></i>Cancelar</a>
                }
                @*@if ((bool)ViewBag.ShowDelete)
                {
                    <a href="@Url.Action("Delete","IncPermiso", new { id = Model.IdIncidenciaPermiso })" class="btn btn-sm pd-x-15 btn-white btn-uppercaser"><i data-feather="trash" class="wd-10 mg-r-5"></i>Eliminar</a>
