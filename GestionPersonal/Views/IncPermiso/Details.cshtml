@if (ViewBag.MessageSuccess != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Estimado usuario!</strong> @ViewBag.MessageSuccess
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}
<div data-label="Crear Nuevo Permiso" class="df-example demo-forms" id="app_createPermiso">
    <h4 class="bg-light">I. Solicitante</h4>
    @await Component.InvokeAsync("ValidPuestoEnOrganigrama", new { id = Model.IdPersona })
    <h4 class="bg-light">II. Detalle de solicitud</h4>
    <dl class="row m-1">
        <dt class="col-lg-2 col-form-label">
            @Html.DisplayNameFor(model => model.Folio)
        </dt>
        <dd class="col-lg-4 col-form-label bg-light mb-1">
            @Html.DisplayFor(model => model.Folio)
        </dd>
        <dt class="col-lg-2 col-form-label">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class="col-lg-4 col-form-label bg-light mb-1">
            @Model.Fecha.ToString("F")
        </dd>
        <dt class="col-lg-2 col-form-label">
            @Html.DisplayNameFor(model => model.Inicio)
        </dt>
        <dd class="col-lg-4 col-form-label bg-light mb-1">
            @Html.DisplayFor(model => model.Inicio)
        </dd>
        <dt class="col-lg-2 col-form-label">
            @Html.DisplayNameFor(model => model.Fin)
        </dt>
        <dd class="col-lg-4 col-form-label bg-light mb-1">
            @Html.DisplayFor(model => model.Fin)
        </dd>
        <dt class="col-lg-2 col-form-label">
            @Html.DisplayNameFor(model => model.DEscripcionTipo)
        </dt>
        <dd class="col-lg-4 col-form-label bg-light mb-1">
            @Html.DisplayFor(model => model.DEscripcionTipo)
        </dd>
        <dt class="col-lg-2 col-form-label">
        </dt>
        <dd class="col-lg-4 col-form-label">
        </dd>
        <dt class="col-lg-2 col-form-label">
            @Html.DisplayNameFor(model => model.DescripcionAsunto)
        </dt>
        <dd class="col-lg-10 col-form-label bg-light mb-1">
            @Html.DisplayFor(model => model.DescripcionAsunto)
        </dd>
        @if (Model.IdAsunto == 36)
        {
            <dt class="col-lg-2 col-form-label">
                @Html.DisplayNameFor(model => model.PagoPermisoDesc)
            </dt>
            <dd class="col-lg-4 col-form-label bg-light mb-1">
                @Html.DisplayFor(model => model.PagoPermisoDesc)
            </dd>
        }
    </dl>
    @if (Model.Estatus >= 4)
    {
        <div class="alert alert-@Model.EstatusColor mt-4 mg-b-0" role="alert">
            Estimado usuario, la solcitud se encuentra con estatus <strong>@Model.EstatusDescricion</strong>
        </div>
    }
    <h4 class="bg-light mt-3">III. Seguimiento</h4>
    <ul class="steps steps-sm steps-justified d-none d-lg-block">
        @foreach (var item in Model.Proceso)
        {
            @if (item.Revisada)
            {
                <li class="step-item complete">
                    <a href="" class="step-link">
                        <span class="step-icon"><i data-feather="user"></i></span>
                        <div>
                            <span class="step-title">@item.Titulo</span>
                            <span class="step-desc">@item.NombreEmpleado</span>
                            <span class="step-desc @Html.Raw(item.Autorizada ? "text-success" : "text-danger")">@Html.Raw(item.Autorizada ? "Aceptada" : "Rechazada")</span>
                            <span class="step-desc">@string.Format("{0:F}", item.Fecha)</span>
                        </div>
                    </a>
                </li>
            }
            else if (!item.Revisada && item.Nivel == Model.Estatus)
            {
                <li class="step-item active">
                    <a href="" class="step-link">
                        <span class="step-icon"><i data-feather="user"></i></span>
                        <div>
                            <span class="step-title">@item.Titulo</span>
                        </div>
                    </a>
                </li>
            }
            else
            {
                <li class="step-item disabled">
                    <a href="" class="step-link">
                        <span class="step-icon"><i data-feather="user"></i></span>
                        <div>
                            <span class="step-title">@item.Titulo</span>
                        </div>
                    </a>
                </li>
            }
        }

    </ul>
    <ul class="steps step-sm steps-vertical col-12 d-block d-lg-none">
            @foreach (var item in Model.Proceso)
            {


                @if (item.Revisada)
                {
                    <li class="step-item complete">
                        <a href="" class="step-link">
                            <span class="step-icon"><i data-feather="user"></i></span>
                            <div>
                                <span class="step-title">@item.Titulo</span>
                                <span class="step-desc">@item.NombreEmpleado</span>
                                <span class="step-desc @Html.Raw(item.Autorizada ? "text-success" : "text-danger")">@Html.Raw(item.Autorizada ? "Aceptada" : "Rechazada")</span>
                                <span class="step-desc">@string.Format("{0:F}", item.Fecha)</span>
                            </div>
                        </a>
                    </li>
                }
                else if (!item.Revisada && item.Nivel == Model.Estatus)
                {
                    <li class="step-item active">
                        <a href="" class="step-link">
                            <span class="step-icon"><i data-feather="user"></i></span>
                            <div>
                                <span class="step-title">@item.Titulo</span>
                            </div>
                        </a>
                    </li>
                }
                else
                {
                    <li class="step-item disabled">
                        <a href="" class="step-link">
                            <span class="step-icon"><i data-feather="user"></i></span>
                            <div>
                                <span class="step-title">@item.Titulo</span>
                            </div>
                        </a>
                    </li>
                }
            }
        </ul>



</div>