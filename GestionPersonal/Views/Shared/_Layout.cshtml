    else
    {
        if (controllerName == "Evaluacion" && controllerAction == "Details")
        {
            <script>
                $(document).ready(function () {
                    $('#inpt_newPart').select2({
                        placeholder: 'Seleccióna una opción',
                        searchInputPlaceholder: 'Search options',
                        dropdownParent: $('#modalActividadVacacionesPeriodos')
                    });
